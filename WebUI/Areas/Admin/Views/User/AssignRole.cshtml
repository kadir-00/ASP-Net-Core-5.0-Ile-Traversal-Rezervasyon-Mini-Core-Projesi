@using WebUI.Areas.Admin.Models
@model List<RoleAssignViewModel>

@{
    ViewData["Title"] = "AssignRole";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Rol Atama Sayfası</h6>
                    <hr>
                </div>
                <div class="card-body pt-0 p-4">
                    <form asp-area="Admin" asp-controller="User" asp-action="AssignRole" method="post">
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <div class="form-check mt-3">
                                <input type="hidden" asp-for="@Model[i].RoleId" />
                                <input type="hidden" asp-for="@Model[i].RoleName" />
                                <input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input" id="role_@i">
                                <label class="form-check-label" for="role_@i">@Model[i].RoleName</label>
                            </div>
                        }

                        <button type="submit" class="btn btn-outline-primary mt-4">Değişiklikleri Kaydet ve Rol
                            Ata</button>
                        <a asp-area="Admin" asp-controller="User" asp-action="UserList"
                            class="btn btn-outline-dark mx-2 mt-4">Geri</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
